generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teams Team[] // Um usu치rio pode ter v치rios times
}

model Character {
  id       String @id @default(uuid())
  name     String
  unit     String
  imageUrl String

  card Card[]
}

model Card {
  id          String @id @default(uuid())
  title       String
  rarity      CardRarity
  attribute   CardAttribute
  imageUrl    String

  characterId String
  character   Character @relation(fields: [characterId], references: [id]) // Uma carta pertence a um personagem

  teams Team[] // Uma carta pode estar em v치rios times
}

model Team {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id]) // Um time pertence a um User

  cards Card[] // Um time pode ter v치rias cartas
}

enum CardRarity {
  TWO_STAR
  THREE_STAR
  FOUR_STAR
}

enum CardAttribute {
  COOL
  CUTE
  HAPPY
  MYSTERIOUS
  PURE
}